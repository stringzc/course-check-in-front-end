/* pages/home/home.wxss */
.container{
  /* background-color: #eeeeee; */
  height : 100%;
}
.partOne {
  display: flex;
  justify-content: space-between;
  background-color: #cae8a7;
  padding-top: 20rpx;
  padding-bottom: 50rpx; 
}
.partOne .header{
  /* margin-top: 10rpx; */
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
}
.partOne.header.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.content .bt_connect{
  width: 200rpx;
  height: 70rpx;
  color: #6699FF;
  border: 3rpx solid #6699FF;
  border-radius: 80rpx;
  font-size: 35rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
 .content .hover-class-1 {
  top: 3rpx;
  background-color: #cae8a7;
}
.layer {
  position: absolute;
  height: 0;
  width: 100%;
  overflow: hidden;
}

.hr {
  width: 100%;
  height: 20px;
  background-color: #f4f5f6;
}
.item {
  display: flex;
  flex-direction: row;
}
.title {
  padding-top: 15px;
  padding-bottom: 15px;
  padding-left: 15px;
  font-size: 20px;
}

.detail2 {
  font-size: 30px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}

.line {
  border: 2px solid rgb(158, 199, 12);
  opacity: 0.4;
}