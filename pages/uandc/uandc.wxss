/* pages/uandc/uandc.wxss */
page{
  width: 100%;
  /* height: 100%; */
}
.all{
  position: fixed;
  background-size: 100% 100%;
  height: 100%;
  width: 100%;
  background-image: url(https://pic4.zhimg.com/v2-42e0e9c30fc52e5d0b793845c4e5cf45_r.jpg?source=1940ef5c);
}
.first{
  /* margin-top: 50%; */
  height: 40px;
  margin: 10px;
  border: 10rpx solid #fa9a82;
  border-radius: 30rpx;
}
.f1{
  width: auto;
  height: 100%;
  font-size: 16pt;
  color: #311116;
}
.f1:active{
  background-color: #ecf3de;
}
.second{
  display: flex;
}
.f2{
  width: 40%;
  height: 20%;
  border: none;
  border-radius: 30px;
  line-height: 100rpx;
  text-align: center;
  color: #f8f7f2;
  font-size: 16pt;
  background: #F15F79; 
}
.f2:active{
  background-color: #949ba0;
}
.texts{
  font-size: 16pt;
  color: #832b39;
}
.danhao{ 
  font-size: 12px; color: gray;
  height: 100rpx; margin-left: 20rpx;
  border-bottom: 1rpx solid #ECECEC; 
  background: white;
  display: flex;
  align-items: center;   
}
.chanpin{
  display: flex;
  padding: 15rpx;
  height: 130rpx;
  border-bottom: 1rpx solid #ECECEC; 
  background: rgba(236, 183, 183, 0.123); 
}
.chanpin-img{
  width: 110rpx;
  height: 110rpx;
}
.chanpin-info{
  display: flex;
  flex-direction:  column;
  align-items:  flex-start;
  flex: 1;
  margin-left: 15rpx;
}
.name{
  font-size: 40rpx; 
  font-weight: 600;
}
.sales{
  font-size: 20rpx;
  font-weight: 600;
  color: #faf612;text-align: left;
}

.chanpin-num{
  height: 80rpx;
  display: flex;
  margin-top: 30rpx;
  margin-right: 40rpx;
  line-height: 45rpx;
  font-size: 40rpx; 
}
.goodbutton {
  /* margin-top: 0px; */
  width: 38%;
  background-color: rgb(252, 126, 67);
  color: white;
  /* border-radius: 1rpx; */
  background: bg_red;
}
 
/* 按下变颜色 */
.hover {
  top: 3rpx;
  background:  rgb(236, 179, 156);}

.line{
  margin: 10rpx;
  width: 100%;
  height: 20rpx;
  background-color: #dba020;
    border-top:1px #989898 solid;
}
.text{
  font-size: 16pt;
  color: rgb(228, 24, 24);
  font-weight: 600;
  margin-left: 38%;
}